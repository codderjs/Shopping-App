<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer Profile</title>
  <link rel="stylesheet" href="/css/profile.css">
  
</head>
<body>
  <div class="profile" >
    <div class="heading">
      <h1>Customer Profile</h1>
    </div>
    <div class="all_div" >
      <label for="name">Name:</label>
      <div class="box"><input type="text" id="name" value="{{customer.name}}" ></div>

      <label for="email">Email:</label>
      <div class="box"><input type="email" id="email" value="{{customer.email}}" ></div>

      <label for="gender">Gender:</label>
      <div class="box"><input type="text" id="gender" value="{{customer.gender}}" ></div>

      <label for="address">Address:</label>
      <div class="box"><textarea id="address" rows="4" cols="50" >{{customer.address}}</textarea></div>

      <label for="dob">Date of Birth:</label>
      <div class="box"><input type="text" id="dob" value="{{customer.dob}}" ></div>

      <label for="pin">PIN:</label>
      <div class="box"><input type="text" id="pin" value="{{customer.pin}}" minlength="6" maxlength="6" ></div>
    
    </div>
    <div class="home">
      <div class="home-Page"><a href="/">Home Page</a></div>
    </div>
  </div>

  
   <script>
    document.addEventListener('DOMContentLoaded', function() {
      const inputs = document.querySelectorAll('.profile input, .profile textarea');
      inputs.forEach(input => {
        input.disabled = true;
      });
    });
  </script>
  </body>
</html>

